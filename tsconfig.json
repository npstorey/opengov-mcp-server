{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Keep NodeNext for ESM output format
    "moduleResolution": "Node16", // CHANGED: Use Node16 resolution strategy
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    // "skipLibCheck": true, // REMOVED / COMMENTED OUT
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    // "declarationMap": false, // REMOVED / COMMENTED OUT
    "isolatedModules": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/__tests__"
  ]
}
