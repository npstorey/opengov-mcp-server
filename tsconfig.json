{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    // "skipLibCheck": true, // REMOVED / COMMENTED OUT
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src", // Keep for tsc build
    "outDir": "./dist", // Keep for tsc build
    "declaration": true,
    "sourceMap": true,
    "declarationMap": false, // Keep this false from previous attempt
    "isolatedModules": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/__tests__"
  ]
}
