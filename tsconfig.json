{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Correct for ESM output
    "moduleResolution": "NodeNext", // Correct for modern resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "types": ["node"],
    "resolveJsonModule": true
    // Removed baseUrl and paths
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/__tests__"
  ]
}
