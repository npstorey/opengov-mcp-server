{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true, // Ensure this is true
    "forceConsistentCasingInFileNames": true,
    // "rootDir": "./src", // Not needed for esbuild
    // "outDir": "./dist", // Not needed for esbuild
    // "declaration": true, // Not needed unless publishing lib
    "sourceMap": true, // esbuild can use this
    // "declarationMap": false, // Not needed
    "isolatedModules": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/__tests__"
  ]
}
