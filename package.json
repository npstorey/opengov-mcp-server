{
  "name": "opengov-mcp-server",
  "version": "0.1.1",
  "description": "MCP server that enables a client, such as Claude Desktop, to access open government data through Socrata APIs",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.js", // Point back to tsc output
  "bin": {
    "opengov-mcp-server": "./dist/index.js" // Point back to tsc output
  },
  "scripts": {
    "clean": "rm -rf dist",
    // Revert build script to use tsc
    "build": "npm run clean && tsc --outDir dist",
    // Optionally remove --traceResolution if logs are too verbose now
    // "build": "npm run clean && tsc --outDir dist --traceResolution",
    "start": "node ./dist/index.js" // Point back to tsc output
    // Keep other scripts if desired (lint, test, etc.) or use the simplified version from earlier
  },
  "keywords": [
    "anthropic",
    "claude-desktop",
    "claude",
    "data",
    "government",
    "mcp",
    "model-context-protocol",
    "open-government",
    "opendata",
    "opengov",
    "socrata"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/npstorey/opengov-mcp-server"
  },
  "author": "Scott Robbin <scott@robbin.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/npstorey/opengov-mcp-server/issues"
  },
  "homepage": "https://github.com/npstorey/opengov-mcp-server#readme",
  "files": [
    "dist", // Include the whole dist folder now
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest", // Keep latest or specific recent version
    "axios": "^1.8.4"
    // dotenv is removed
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/node": "^18.0.0",
    "@types/axios": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "vitest": "^3.1.1"
    // esbuild can be removed
    // "esbuild": "^0.20.0"
  }
}
